              +iconTwitter(14)
          .p-infinite-wall__item
            |//////////

  .p-dummy-scroll.js-dummy-scroll


  .p-host-event.js-contents#register
    .p-host-event__row
      |REGISTER YOUR INTEREST
    .p-host-apply
      .p-introduction__input
        input(placeholder="Your name" type='text' name='name')#name
      .p-introduction__input
        input(placeholder="Your email" type='email' name='email')#email
      .p-introduction__input
        input(placeholder="Your company" type='text' name='company')#company

    .p-host-apply
      .p-introduction__input
        input(placeholder="Your title" type='text' name='title')#title
      .p-introduction__input
        select(name='type')#type
          option(value='', selected='selected') -- Select attendee type --
          option(value="Guest") I'd like to attend events
          option(value="Host") I'd like to host an event

    .p-host-apply
      .p-introduction__button 
        button(type='button')#submit
          |Register Interest

    .p-success#success
      |Successful registration, now follow along on 
      +textLink("https://twitter.com/NYCTechWeek", " Twitter", "_blank")

